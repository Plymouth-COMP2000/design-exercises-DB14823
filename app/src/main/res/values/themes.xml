<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.RestaurantApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">@color/jet</item>

        <item name="android:windowBackground">@color/background</item>
        <item name="android:statusBarColor">@color/primaryDark</item>

        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="colorOnBackground">@color/textPrimary</item>
        <item name="colorOnSurface">@color/textPrimary</item>

        <item name="android:textViewStyle">@style/CozyTextView</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListViewStyle</item>

    </style>
    <style name="DropDownListViewStyle" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>


    <style name="CozyTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/textPrimary</item>
    </style>

</resources>
