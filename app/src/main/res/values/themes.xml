<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.RestaurantApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Force a clean neutral style -->
        <item name="colorPrimary">#000000</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#000000</item>
        <item name="android:buttonStyle">@style/CustomButtonStyle</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/button_black_rounded</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">12dp</item>
    </style>
</resources>
