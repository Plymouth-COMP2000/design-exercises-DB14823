<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/back" />

        <!-- Restaurant Name -->
        <TextView
            android:id="@+id/txtRestaurantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/restaurant_name"
            android:textStyle="bold"
            android:textSize="28sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp" />

        <!-- Menu Title -->
        <TextView
            android:id="@+id/txtMenuTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@id/txtRestaurantName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <!-- 2x2 Grid Layout -->
        <GridLayout
            android:id="@+id/menuGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtMenuTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true">

            <!-- Burger -->
            <LinearLayout
                android:id="@+id/menuItemBurger"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/burger"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_corners"
                    android:clipToOutline="true"
                    android:contentDescription="@string/food_image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/burger"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tenner" />
            </LinearLayout>

            <!-- Chicken -->
            <LinearLayout
                android:id="@+id/menuItemChicken"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/chicken"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_corners"
                    android:clipToOutline="true"
                    android:contentDescription="@string/food_image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chicken"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fiver" />
            </LinearLayout>

            <!-- Chips -->
            <LinearLayout
                android:id="@+id/menuItemChips"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/chips"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_corners"
                    android:clipToOutline="true"
                    android:contentDescription="@string/food_image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chips"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/one" />
            </LinearLayout>

        </GridLayout>

    </RelativeLayout>
</ScrollView>
