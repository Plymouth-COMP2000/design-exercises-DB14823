<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="top|center_horizontal"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/background">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="@string/restaurant_name"
        android:textSize="56sp"
        android:textStyle="bold"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="6dp"
        android:textColor="@color/textPrimary"
        android:gravity="center"/>

    <View
        android:layout_width="92dp"
        android:layout_height="6dp"
        android:background="@drawable/accent_pill"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="18dp"/>

    <TextView
        android:id="@+id/txtTagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comfort food • Cozy tables"
        android:textSize="16sp"
        android:textColor="@color/textSecondary"
        android:letterSpacing="0.01"
        android:layout_marginBottom="42dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCustomerLogin"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginBottom="16dp"
        android:text="@string/login_customer"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:letterSpacing="0.01"
        android:paddingStart="24dp"
        android:gravity="center_vertical"
        android:background="@drawable/button_primary"

        app:icon="@drawable/ic_person"
        app:iconTint="@android:color/white"
        app:iconPadding="14dp"
        app:iconGravity="textStart"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStaffLogin"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="12dp"
        android:text="@string/login_staff"
        android:textColor="@color/textPrimary"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:letterSpacing="0.01"
        android:paddingStart="24dp"
        android:gravity="center_vertical"
        android:background="@drawable/button_ripple"

        app:icon="@drawable/ic_badge"
        app:iconTint="@color/textPrimary"
        app:iconPadding="14dp"
        app:iconGravity="textStart"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnViewMenu"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="12dp"
        android:text="@string/view_menu"
        android:textColor="@color/textPrimary"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:letterSpacing="0.01"
        android:paddingStart="24dp"
        android:gravity="center_vertical"
        android:background="@drawable/button_ripple"

        app:icon="@drawable/ic_restaurant_menu"
        app:iconTint="@color/textPrimary"
        app:iconPadding="14dp"
        app:iconGravity="textStart"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open daily • 9am – 9pm"
        android:textSize="14sp"
        android:textColor="@color/textSecondary"
        android:layout_marginTop="38dp"/>

</LinearLayout>
